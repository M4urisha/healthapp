<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.AddExerciseController" spacing="10">
    <ComboBox fx:id="exerciseComboBox" prefWidth="200"/>
    <Label fx:id="addedItemsLabel"/>
    <TextField fx:id="minutesTextField" promptText="Enter minutes"/>
    <Button text="Add Exercise" onAction="#addExerciseItem"/>
    <Button fx:id="backButton" text="Back" onAction="#handleBackButtonAction"/>
</VBox>

