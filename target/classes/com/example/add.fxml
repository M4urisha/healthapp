<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.AddController">
    <Label text="Select Food Item" />
    <ComboBox fx:id="foodComboBox" />
    
    <Label text="Select Exercise Item" />
    <ComboBox fx:id="exerciseComboBox" />

    <Button text="Add Food/Exercise" onAction="#addItem"/>

    <Label fx:id="addedItemsLabel" text="Added items will appear here" />
</VBox>

