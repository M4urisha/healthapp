<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="270.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.PrimaryController">
   <ImageView fitHeight="650.0" fitWidth="330.0" layoutX="5.0" layoutY="-8.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/black_phone-removebg-preview.png" />
      </image>
   </ImageView>
    <!-- Image -->
    <ImageView blendMode="MULTIPLY" fitHeight="39.0" fitWidth="151.0" layoutX="90.0" layoutY="45.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="90.0" AnchorPane.topAnchor="45.0">
        <image>
            <Image url="@images/Capture.PNG" />
        </image>
    </ImageView>

    <!-- Register Button -->
    <Button fx:id="registerButton" layoutX="89.0" layoutY="226.0" onAction="#switchToSecondary" prefHeight="43.0" prefWidth="128.0" style="-fx-background-color: transparent;" styleClass="-fx-border-color: transparent;" AnchorPane.leftAnchor="89.0" AnchorPane.topAnchor="226.0">
        <graphic>
            <ImageView fitHeight="67.0" fitWidth="138.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/Frame%209.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <!-- Login Button -->
    <Button fx:id="loginButton" layoutX="131.0" layoutY="283.0" onAction="#switchToSecondary" prefHeight="28.0" prefWidth="66.0" style="-fx-background-color: transparent;" styleClass="-fx-border-color: transparent;" text="Login" textFill="#686666" AnchorPane.leftAnchor="131.0" AnchorPane.topAnchor="283.0">
        <font>
            <Font name="Georgia" size="12.0" />
        </font>
    </Button>

    <!-- Top of Phone Image (Fixed Position) -->
    <ImageView blendMode="MULTIPLY" fitHeight="31.0" fitWidth="271.0" layoutX="29.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="29.0" AnchorPane.topAnchor="14.0">
        <image>
            <Image url="@images/topofphone.png" />
        </image>
    </ImageView>
</AnchorPane>
